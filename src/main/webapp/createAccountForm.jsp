            <div class="col-sm-4">
                <div class="signup-form"><!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form  method="post">
                        <input type="text" name="username" placeholder="username" value=""/>
                        <input type="password" name="password" id="1a" placeholder="Password" value=""/>
                        <input onkeyup="checkValid()" type="password" id="2a" name="password" value=""
                               placeholder="re-enter the password"/>

                        <p id="password-warning" style="color: red"></p>
                        <input id = "btn" type="submit" class="btn btn-default" value="Signup"></input>
                        <script>
                            function checkValid() {
                                let password = document.getElementById('1a').value;
                                let password1 = document.getElementById('2a').value;
                                if (password1 === password){
                                    document.getElementById("password-warning").innerHTML="";

                                    $("#btn").removeAttr("disabled")
                                }

                                if (password !== password1) {
                                    document.getElementById("password-warning").innerHTML = "password is not match"
                                    $("#btn").attr("disabled","true")
                                }

                            }
                        </script>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
